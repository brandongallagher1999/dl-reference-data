{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Update Tag Request",
    "description": "Request to update a tag",
    "type": "object",
    "properties": {
        "id": {
            "description": "id of the tag entry to update",
            "type": "number",
            "exclusiveMinimum": 0
        },
        "name": {
            "description": "name of the new tag",
            "type": "string"
        },
        "userId": {
            "description": "user that sent the new tag request",
            "type": "number",
            "exclusiveMinimum": 0
        }
    },
    "required": [
        "id",
        "name",
        "userId"
    ]
}