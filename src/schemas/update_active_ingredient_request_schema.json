{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Update active ingredient Request",
    "description": "Request to update tag",
    "type": "object",
    "properties": {
        "id": {
            "description": "id of the active ingredient to update",
            "type": "integer"
        },
        "name": {
            "description": "new name for the active ingredient",
            "type": "string"
        },
        "userId": {
            "description": "id of the user making the request",
            "type": "integer",
            "exclusiveMinimum": 0
        }
    },
    "required": [
        "id",
        "name",
        "userId"
    ]
}