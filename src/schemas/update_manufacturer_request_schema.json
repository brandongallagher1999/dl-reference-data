{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Update Manufacturer Request",
    "description": "Request to update a Manufacturer",
    "type": "object",
    "properties": {
      "id": {
        "description": "id of the manufacturer",
        "type": "integer"
      },
      "shortName": {
        "description": "short name (abbreviation) of the Manufacturer",
        "type": "string"
      },
      "longName": {
        "description": "long name (full name) of the Manufacturer",
        "type": "string"
      },
      "userId": {
        "description": "user that sent the request",
        "type": "integer",
        "exclusiveMinimum": 0
      }
    },
    "required": [
      "id",
      "shortName",
      "longName",
      "userId"
    ]
  }