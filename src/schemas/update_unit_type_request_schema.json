{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Update Unit Type Request",
    "description": "Request to update Unit Type",
    "type": "object",
    "properties": {
      "id": {
        "description": "id of the Unit Type to update",
        "type": "integer"
      },
      "name": {
        "description": "new name for the Unit Type",
        "type": "string"
      },
      "userId": {
        "description": "id of the user making the request",
        "type": "integer",
        "exclusiveMinimum": 0
      }
    },
    "required": [
      "id",
      "name",
      "userId"
    ]
  }