{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "New Unit type Request",
    "description": "Request to create a new Unit type",
    "type": "object",
    "properties": {
      "name": {
        "description": "name of the new Unit type",
        "type": "string"
      },
      "userId": {
        "description": "user that sent the request",
        "type": "integer",
        "exclusiveMinimum": 0
      }
    },
    "required": [
      "name",
      "userId"
    ]
  }