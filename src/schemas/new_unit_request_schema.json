{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "New Unit Request",
    "description": "Request to create a new Unit",
    "type": "object",
    "properties": {
      "shortName": {
        "description": "abbreviated name of the Unit",
        "type": "string"
      },
      "longName": {
        "description": "full name of the Unit",
        "type": "string"
      },
      "unitTypeId": {
        "description": "type of Unit id",
        "type": "integer"
      },
      "userId": {
        "description": "user that sent the request",
        "type": "integer",
        "exclusiveMinimum": 0
      }
    },
    "required": [
      "shortName",
      "longName",
      "unitTypeId",
      "userId"
    ]
  }